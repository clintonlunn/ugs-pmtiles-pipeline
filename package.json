{
  "name": "ugs-pmtiles-pipeline",
  "version": "1.0.0",
  "description": "Convert UGS GeoServer layers to PMTiles for performant web mapping",
  "scripts": {
    "convert": "./scripts/convert-all.sh",
    "convert:layer": "./scripts/convert-layer.sh",
    "setup": "./scripts/setup-local.sh",
    "lint": "npm run lint:shell && npm run lint:json",
    "lint:shell": "shellcheck scripts/*.sh",
    "lint:json": "prettier --check '**/*.json' '**/*.md'",
    "format": "prettier --write '**/*.json' '**/*.md'",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0"
  },
  "lint-staged": {
    "*.sh": "shellcheck",
    "*.{json,md}": "prettier --write"
  },
  "keywords": [
    "pmtiles",
    "geoserver",
    "maplibre",
    "vector-tiles"
  ],
  "author": "UGS",
  "license": "MIT",
  "dependencies": {
    "fast-xml-parser": "^5.3.2",
    "geostyler-mapbox-parser": "^6.1.1",
    "geostyler-sld-parser": "^8.2.0"
  }
}
